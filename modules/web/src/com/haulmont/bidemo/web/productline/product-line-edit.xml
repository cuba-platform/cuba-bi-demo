<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.bidemo.web.productline.ProductLineEdit"
        datasource="productLineDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.bidemo.web.productline">
    <dsContext>
        <datasource id="productLineDs"
                    class="com.haulmont.bidemo.entity.ProductLine"
                    view="_local"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="productLineDs">
            <column width="250px">
                <field id="name"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
